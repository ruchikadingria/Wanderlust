<% layout("/layouts/boilerplate") %>

    <div class="row mt-4">
        <div class="col-8 offset-2">

            <div class="card shadow-sm">
                <img src="<%= listing.image %>" class="card-img-top" alt="Listing image"
                    style="max-height: 30vh; width: 100%; object-fit: contain; background-color: #f8f9fa;">

                <div class="card-body">
                    <h4 class="card-title mb-3">
                        <%= listing.title %>
                    </h4>

                    <p class="card-text">
                        <%= listing.description %>
                    </p>
                </div>

                <ul class="list-group list-group-flush">
                    <li class="list-group-item">
                        <strong>Location:</strong>
                        <%= listing.location %>
                    </li>
                    <li class="list-group-item">
                        <strong>Country:</strong>
                        <%= listing.country %>
                    </li>
                    <li class="list-group-item">
                        <strong>Price:</strong> &#8377;<%= listing.price.toLocaleString("en-IN") %>
                    </li>
                </ul>

                <div class="card-body d-flex gap-2">
                    <a href="/Listings/<%= listing._id %>/edit" class="btn btn-outline-dark">
                        Edit
                    </a>

                    <form method="POST" action="/Listings/<%= listing._id %>?_method=DELETE">
                        <button class="btn btn-danger">
                            Delete
                        </button>
                    </form>
                </div>
            </div>

        </div>
    </div>